{
  "manifest_version": 3,
  "name": "YouTube QnA Bot",
  "version": "1.0",
  "description": "Ask questions about YouTube videos using AI",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://www.youtube.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["style.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
